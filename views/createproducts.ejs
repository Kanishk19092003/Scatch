<%- include('./partials/header') %>

<div class="w-full min-h-screen bg-white text-zinc-900 p-10">
    <div class="container mx-auto">
        <% if(success && success.length > 0){ %>
            <div class="p-3 rounded-md bg-green-500 text-white mb-5">
                <%= success %>
            </div>
            <% } %>
        <% if(error && error.length > 0){ %>
            <div class="p-3 rounded-md bg-red-500 text-white mb-5">
                <%= error %>
            </div>
            <% } %>

        <div class="flex flex-col md:flex-row gap-10">
            <div class="w-full md:w-1/4">
                <h3 class="text-xl font-semibold mb-4">Admin Menu</h3>
                <div class="flex flex-col gap-2">
                    <a class="block w-fit text-blue-400 hover:text-blue-300" href="/owners/admin/products">All Products</a>
                    <a class="block w-fit text-blue-400 hover:text-blue-300" href="/owners/admin">Create New Product</a>
                </div>
            </div>
            <main class="w-full md:w-3/4 bg-zinc-100 p-8 rounded-lg shadow-lg">
                <h2 class="text-2xl font-bold mb-6">Create New Product</h2>
                <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                    <div class="mb-6">
                        <h3 class="text-lg font-semibold mb-4">Product Details</h3>
                        <div class="mb-4">
                            <label class="block mb-2 font-medium">Product Image</label>
                            <input name="image" type="file" class="w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" required>
                        </div>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <input name="name" type="text" placeholder="Product Name"
                                class="border-2 border-zinc-200 bg-white p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                            <input name="price" type="number" step="0.01" placeholder="Product Price"
                                class="border-2 border-zinc-200 bg-white p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                            <input name="discount" type="number" placeholder="Discount %" value="0"
                                class="border-2 border-zinc-200 bg-white p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>

                    <div>
                        <h3 class="text-lg font-semibold mb-4">Card Colors</h3>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <input name="bgcolor" type="text" placeholder="Background Color (hex)"
                                class="border-2 border-zinc-200 bg-white p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <input name="panelcolor" type="text" placeholder="Panel Color (hex)"
                                class="border-2 border-zinc-200 bg-white p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <input name="textcolor" type="text" placeholder="Text Color (hex)"
                                class="border-2 border-zinc-200 bg-white p-2 rounded w-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                        </div>
                    </div>
                    <input class="px-5 py-3 rounded-md mt-6 bg-blue-500 hover:bg-blue-600 text-white font-bold cursor-pointer transition-colors duration-300" type="submit"
                        value="Create New Product">
                </form>
            </main>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>